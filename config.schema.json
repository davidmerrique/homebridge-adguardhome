{
  "pluginAlias": "AdGuardHome",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "host": {
        "title": "IP Address / Hostname",
        "type": "string",
        "required": true,
        "format": "hostname",
        "default": "localhost"
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "required": false,
        "default": 80
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": false
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": false
      },
      "name": {
        "title": "HomeKit Name",
        "type": "string",
        "required": false,
        "default": "AdGuard Home"
      }
    }
  }
}
